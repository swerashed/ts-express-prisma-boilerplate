generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ENUMS
enum ServiceStatus {
  pending
  in_progress
  done
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  USER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  qr_codes  QRCode[]

  isVerified Boolean   @default(false) @map("is_verified")
  otp        String?
  otpExpiry  DateTime? @map("otp_expiry")
  resendAttempts Int       @default(0) @map("resend_attempts")
  lastResendAt   DateTime? @map("last_resend_at")

  @@map("users")
}

model QRCode {
  id              String    @id @default(uuid())
  name            String
  description     String?
  settings        Json?
  totalEdits      Int       @default(0) @map("total_edits")
  targetUrl       String    @map("target_url")
  totalScans      Int       @default(0) @map("total_scans")
  uniqueScans     Int       @default(0) @map("unique_scans")
  lastScans       DateTime? @map("last_scan")
  trackingEnabled Boolean   @map("tracking_enabled")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  creatorId       String
  creator         User      @relation(fields: [creatorId], references: [id])
  Scan            Scan[]

  @@map("qr_codes")
}

model Scan {
  id     String @id @default(uuid())
  qrId   String @map("qr_id")
 qrCode QRCode @relation(fields: [qrId], references: [id], onDelete: Cascade)

  // Device Information
  deviceType String? @map("device_type")
  os         String?
  browser    String?
  userAgent  String?  @map("user_agent")

  // Location Data
  ip        String?
  country   String?
  region    String?
  city      String?
  latitude  Float?
  longitude Float?
  
  // Identification
  fingerprint String
  isUnique    Boolean @default(true) @map("is_unique")

  // Timestamps
  timestamp DateTime @default(now())

  @@index([qrId])
  @@index([timestamp])
  @@index([deviceType])
  @@index([country])
  @@map("scans")
}

model PaymentRequest {
  id        String   @id @default(uuid())
  firstName String   @map("first_name")
  lastName  String   @map("last_name")
  email     String
  phone     String?
  company   String?
  plan      String?
  status    String   @default("pending")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("payment_requests")
}
